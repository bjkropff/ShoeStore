<form action="/stores/{{ store.getId }}/edit" method="post">
    <input type="hidden" name="_method" value="patch">
        <label for="new_name">Edit Store name</label>
    <input type="text" name="new_name">
    <button type="submit">Submit</button>
</form>
<p>
    Here is a list of brands sold at this store:
</p>

{% if brands is not empty %}
    Brands found at this store:
    {% for brand in brands %}
        <ul>
            <li><a href="/brands/{{ style.getId }}/edit">{{ brand.getStyle }}</a></li>
        </ul>
    {% endfor %}
    {% else %}
        <p>
            There are no brands for this store at this time.
        </p>
{% endif %}

<p>
    Add a brand that is sold here:
</p>

<p>
    Store no longer exist?
</p>
<form action="/stores/{{store.getId}}/delete" method="post">
    <input type="hidden" name="_method" value="delete">

    <button type="submit">Delete</button>
</form>
